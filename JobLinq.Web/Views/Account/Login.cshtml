@using JobLinq.Web.ViewModels;
@model UserViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<hr />

<form asp-controller="Account" asp-action="Login" method="post">
    <div class="mb-3">
        <label class="form-label">E-Mail</label>
        <input type="email" class="form-control" asp-for="UserEmail" />
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Giriş Yap</button>

</form>

